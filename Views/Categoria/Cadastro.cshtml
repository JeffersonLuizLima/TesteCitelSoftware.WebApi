@model TesteCitelSoftware.WebApi.Models.CategoriaViewModel

@{
    ViewBag.Title = "Cadastro";
}

<h2>Cadastro</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <form class="form-horizontal">
        <fieldset>
            <div class="panel panel-primary">
                <div class="panel-heading">Dados da Categoria</div>

                <div class="panel-body">
                    <div class="form-group">

                        <div class="col-md-11 control-label">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <p class="help-block"><h11>*</h11> Campo Obrigatório </p>
                        </div>
                    </div>

                    <div class="widget-content">
                        <div class="row">
                            <div class="col-sm-12">
                                <label class="texto">Descrição</label>
                                <span class="Obrigatorio" data-toggle="tooltip" data-placement="right" title="Campo Obrigatório">*</span>
                                @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control", placeholder = "Descrição da categoria" } })
                                @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-sm-8">
                                <button id="Cadastrar" name="Cadastrar" class="btn btn-success" type="Submit">Cadastrar</button>
                                @Html.ActionLink("Cancelar", "Index", new { }, new { @class = "btn btn-danger" })
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </fieldset>
    </form>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
