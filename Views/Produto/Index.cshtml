@model IEnumerable<TesteCitelSoftware.WebApi.Models.ProdutoViewModel>

@{
    ViewBag.Title = "Produto";
}

<h3>Consulta de Produtos</h3>

<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="~/Geral/vendor/perfect-scrollbar/perfect-scrollbar.css">
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="~/Geral/css/main.css">
<!--===============================================================================================-->

<body>
    <p>
        @Html.ActionLink("Novo Produto", "Cadastro", new { }, new { @class = "btn btn-sm btn-primary pull-left m-b-2" })
    </p>
    <div class="container-table100">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="wrap-table100">
            <div class="table100 ver1 m-b-110">
                <div class="table100-head">
                    <table>
                        <thead>
                            <tr class="row100 head">
                                <th class="cell100 column1">
                                    @Html.DisplayNameFor(model => model.Nome)
                                </th>
                                <th class="cell100 column2">
                                    @Html.DisplayNameFor(model => model.Valor)
                                </th>
                                <th class="cell100 column3">
                                    @Html.DisplayNameFor(model => model.Categoria.Descricao)
                                </th>
                                <th class="cell100 column4">
                                    
                                </th>
                            </tr>
                        </thead>
                    </table>
                </div>

                <div class="table100-body js-pscroll" style="height:300px">

                    <table>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="row100 body">
                                    <td class="cell100 column1">
                                        @Html.DisplayFor(modelItem => item.Nome)
                                    </td>
                                    <td class="cell100 column2">
                                        @Html.DisplayFor(modelItem => item.Valor)
                                    </td>
                                    <td class="cell100 column3">
                                        @Html.DisplayFor(modelItem => item.Categoria.Descricao)
                                    </td>
                                    <td class="cell100 column4">
                                        @Html.ActionLink("Editar", "Alterar", new { id = item.Id }, new { @class = "btn btn-sm btn-success" }) |
                                        @Html.ActionLink("Detalhes", "Detalhes", new { id = item.Id }, new { @class = "btn btn-sm btn-primary" }) |
                                        @Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-danger" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!--===============================================================================================-->
    <script src="~/Geral/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Geral/vendor/perfect-scrollbar/perfect-scrollbar.min.js"></script>
    <script>
        $('.js-pscroll').each(function () {
            var ps = new PerfectScrollbar(this);

            $(window).on('resize', function () {
                ps.update();
            })
        });


    </script>
</body>



